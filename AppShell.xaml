<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Project1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Project1"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Basic Calculator">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Advance Calculator">
        <ShellContent ContentTemplate="{DataTemplate local:AdvCal}"/>
    </FlyoutItem>
    <FlyoutItem Title="About">
        <ShellContent ContentTemplate="{DataTemplate local:About}"/>
    </FlyoutItem>
    <FlyoutItem Title="Exercise">
        <ShellContent ContentTemplate="{DataTemplate local:ExamPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="History-Expression">
        <ShellContent ContentTemplate="{DataTemplate local:HistoryExps}"/>
    </FlyoutItem>

    <MenuItem Text="Light" Clicked="OnThemeChange"/>
    <MenuItem Text="Dark" Clicked="OnThemeChange"/>
    <MenuItem Text="Green" Clicked="OnThemeChange"/>
    <MenuItem Text="Pink" Clicked="OnThemeChange"/>
</Shell>

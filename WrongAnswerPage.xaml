<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project1.WrongAnswerPage"
             Title="WrongAnswerPage">
    <VerticalStackLayout>
        <Label 
            Text="YOUR ANSWER WAS WRONG"
            Margin="18"
            FlowDirection="LeftToRight"
             />
        <Button Text="Try the Question Again" FlowDirection="LeftToRight" WidthRequest="180" Clicked="tryTheQuestionAgain" Margin="12"/>
        <Button Text="Skip to Next Question"  FlowDirection="LeftToRight" WidthRequest="180" Clicked="skipNext" Margin="12"/>
    </VerticalStackLayout>
</ContentPage>